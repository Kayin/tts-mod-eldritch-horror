    <Button class="button__small" fontSize="12" />
    <Button class="button__conditions" colors="rgb(1,1,1)|rgb(0.95,0.70,0.70)|rgb(0.76,0.34,0.35)|rgba(0.78,0.78,0.78,0.5)" />
