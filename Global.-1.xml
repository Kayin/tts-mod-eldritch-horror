<Defaults>
    <!-- Set the default color and font size for all Text elements -->
    <Text color="rgb(1,1,1)" fontSize="16" />
    <!-- Defautl panel styles -->
    <Panel showAnimation="FadeIn" hideAnimation="FadeOut" width="100%" height="860" padding="24" />
    <!-- Default buttons -->
    <Button
        fontSize="16" height="32" preferredHeight="32" />

    <!-- Title Text -->
    <Text class="panel-title" fontSize="20" fontStyle="bold" height="32" />
    <!-- Close Buttons -->
    <Button
        class="button__close"
        colors="rgb(1,1,1)|rgb(0.8,0,0)|rgb(0.6,0,0)|rgba(0.78,0.78,0.78,0.5)"
        ignoreLayout="true"
        rectAlignment="UpperRight"
